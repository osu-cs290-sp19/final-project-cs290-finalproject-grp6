<article class="post">
        <div class="post-content">
          <p class="post-text">
            {{postContent}}
          </p>
          <button type="button" class="view-comments-button">See Comments</button>
        </div>

        <div class="comment-container hidden">
            <div class="comment">
              <p class="comment-text">
                {{!comment}}
              </p>
              <p class="date-time">
                {{!commentDate}}
              </p>
            </div>
          <input type="text" placeholder="Comment Something Here" class="comment-input" maxlength="100">
          <button type="button" class="post-comment-button">Comment</button>
        </div>
</article>